@model JustBlog.Core.Entities.Post

@{
    ViewBag.Title = "PostDetail";
    Layout = "~/Views/Shared/_LayoutPostDetail.cshtml";
}

<header class="masthead" style="background-image: url('../../Asset/startbootstrap-clean-blog-gh-pages/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">@Model.Description</h2>
                    <span class="meta">
                        Posted by
                        <a href="#">@Model.AuthorId</a>
                        on @Model.DateCreated
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</article>

<hr>

